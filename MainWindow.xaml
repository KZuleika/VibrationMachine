<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VibrationMachine"
        xmlns:Wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="VibrationMachine.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="622.8" Width="977.6">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="721*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="554" Margin="19,29,0,0" Stroke="Black" VerticalAlignment="Top" Width="740" Grid.ColumnSpan="2"/>

        <Wpf:CartesianChart x:Name="HGraph" HorizontalAlignment="Left" Height="475" Margin="57,85,0,0" VerticalAlignment="Top" Width="671" DisableAnimations="True" Hoverable="False" DataTooltip="{x:Null}" Foreground="#FF477CE0" Loaded="HGraph_Loaded" Grid.ColumnSpan="2"/>
        <Label x:Name="PositionLabel" Content="Posición" HorizontalAlignment="Left" Margin="199.4,29,0,0" VerticalAlignment="Top" Height="46" Width="114" FontSize="25" FontWeight="Bold" Grid.Column="1"/>
        <Label x:Name="XLabel" Content="Tiempo (s)" HorizontalAlignment="Left" Margin="199.4,372,0,0" VerticalAlignment="Top" Height="28" Width="114" FontSize="14" Grid.Column="1"/>
        <Label x:Name="YLabel" Content="Posición (cm)" HorizontalAlignment="Left" Margin="-18,287,0,0" VerticalAlignment="Top" Height="28" Width="114" FontSize="14" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.359"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="StartButton" Content="Inicio" HorizontalAlignment="Left" Margin="696.4,21,0,0" VerticalAlignment="Top" Width="80" Height="35" FontWeight="Bold" Background="#FFE6F4FF" Click="StartButton_Click" Grid.Column="1"/>
        <Button x:Name="StopButton" Content="Detener" HorizontalAlignment="Left" Margin="781.4,21,0,0" VerticalAlignment="Top" Width="80" Height="35" FontWeight="Bold" Background="#FFFFFFD2" IsEnabled="False" Click="StopButton_Click" Grid.Column="1"/>
        <Rectangle Fill="#FFE6F4FF" HorizontalAlignment="Left" Height="61" Margin="725.4,469,0,0" Stroke="Black" VerticalAlignment="Top" Width="136" Grid.Column="1"/>
        <Label x:Name="TLabel" Content="00:00.00" HorizontalAlignment="Left" Margin="732.4,485,0,0" VerticalAlignment="Top" FontSize="25" FontStretch="Expanded" Foreground="#FF080808" Background="{x:Null}" Height="45" Width="119" Grid.Column="1"/>
        <Label x:Name="TTitle_Label" Content="Tiempo" HorizontalAlignment="Left" Margin="737.4,469,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="ConnectButton" Content="Conectar" HorizontalAlignment="Left" Margin="696.4,145,0,0" VerticalAlignment="Top" Width="80" Height="30" FontWeight="Bold" Background="#FFE6F4FF" Click="ConnectButton_Click" Grid.Column="1"/>
        <ComboBox x:Name="PortsComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="112" Margin="749.4,113,0,0" SelectionChanged="PortsComboBox_SelectionChanged" Height="20" Grid.Column="1"/>
        <Label x:Name="StatusLabel" Content="Estado: Desconectado" HorizontalAlignment="Left" Margin="696.4,172,0,0" VerticalAlignment="Top" Width="153" Grid.Column="1"/>
        <Button x:Name="DisconnectButton" Content="Desconectar" HorizontalAlignment="Left" Margin="781.4,145,0,0" VerticalAlignment="Top" Width="80" Height="30" FontWeight="Bold" Background="#FFE6F4FF" Click="DisconnectButton_Click" Grid.Column="1" IsEnabled="False"/>
        <Button x:Name="OpenButton" Content="Abrir CSV" HorizontalAlignment="Left" Margin="696.4,64,0,0" VerticalAlignment="Top" Width="165" Click="OpenButton_Click" Height="32" Grid.Column="1"/>
        <Rectangle Fill="#FFE6F4FF" HorizontalAlignment="Left" Height="61" Margin="725.4,403,0,0" Stroke="Black" VerticalAlignment="Top" Width="136" Grid.Column="1"/>
        <Label x:Name="MaxHTitle_Label" Content="Altura máxima (mm)" HorizontalAlignment="Left" Margin="739.4,403,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="MaxHLabel" Content="0.00" HorizontalAlignment="Left" Margin="732.4,419,0,0" VerticalAlignment="Top" FontSize="25" FontStretch="Expanded" Foreground="#FF080808" Background="{x:Null}" Height="45" Width="119" Grid.Column="1"/>
        <Rectangle Fill="#FFD9EEF7" HorizontalAlignment="Left" Height="30" Margin="696.4,224,0,0" Stroke="#FF4F98F3" VerticalAlignment="Top" Width="165" RenderTransformOrigin="0.513,0.788" Grid.Column="1"/>
        <Label x:Name="LastX_Label" Content="LastX" HorizontalAlignment="Center" Margin="704.4,224,31.2,338.8" VerticalAlignment="Center" Width="146" FontSize="15" Height="30" Grid.Column="1"/>
        <Label x:Name="PortLabel" Content="Puerto:" Grid.Column="1" HorizontalAlignment="Left" Margin="696.4,107,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LastValueTLabel" Content="Último dato registrado" HorizontalAlignment="Left" Margin="696.4,203,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="165" Grid.Column="1"/>
        <Label x:Name="PWM_IndicatorTitle_Label" Content="PWM" HorizontalAlignment="Left" Margin="696.4,266,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="140" Grid.Column="1"/>
        <Rectangle Fill="#FFE2F7D9" HorizontalAlignment="Left" Height="111" Margin="696.4,287,0,0" Stroke="#FF4F98F3" VerticalAlignment="Top" Width="160" RenderTransformOrigin="0.513,0.788" Grid.Column="1"/>
        <StackPanel Margin="704.4,297,32.2,194.8" Grid.Column="1">
            <Label FontWeight="Bold" Content="Ciclo de trabajo"/>
            <RadioButton x:Name="PWM_RadioButton80" Content="80%" Checked="RadioButton_Checked" IsChecked="True"/>
            <RadioButton x:Name="PWM_RadioButton60" Content="60%" Checked="RadioButton_Checked" Margin="0,0,-0.2,0"/>
            <RadioButton x:Name="PWM_RadioButton40" IsChecked="True" Content="40%" Checked="RadioButton_Checked"/>
            <RadioButton x:Name="PWM_RadioButton20" Content="20%" Checked="RadioButton_Checked" IsChecked="True"/>
        </StackPanel>
    </Grid>

</Window>
